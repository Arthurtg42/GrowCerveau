        />

    <TextView
        android:id="@+id/template_resultats_reponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/ResultatTemplate_correction"
        />


</LinearLayout>