<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConnectionActivity"
    android:background="@drawable/fond_app_v3">

    <LinearLayout
        android:id="@+id/GoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="GoBack"
        android:background="@color/lightblue"
        android:elevation="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_back"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConnectionActivity_title"
        android:layout_gravity="center"
        android:background="@drawable/drawable_back_general"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/ConnectionActivity_pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ConnectionActivity_hint_pseudo"
        android:background="@drawable/drawable_back_general"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/ConnectionActivity_mdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ConnectionActivity_hint_mdp"
        android:background="@drawable/drawable_back_general"
        android:layout_margin="20dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/ConnectionActivity_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConnectionActivity_btn_connex"
        android:onClick="ConnectionActivityConnexion"
        android:background="@drawable/drawable_backgroundrounded"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>