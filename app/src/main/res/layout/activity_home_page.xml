<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hello_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigationActivity"
    android:background="@drawable/fond_app_v3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:onClick="HomePageActivityCompte"
        android:orientation="horizontal"
        android:background="@color/lightblue"
        android:elevation="3dp"
        android:paddingLeft="10dp"
        >

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:background="@drawable/account"
            android:onClick="HomePageActivityCompte" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null"
            android:onClick="HomePageActivityCompte"
            android:text="Compte"
            android:textSize="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/HomePageActivity_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonjour ! Choisissez une activitÃ© pour commencer l'entrainement !"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/drawable_back_general"
        android:textColor="@color/black"/>
    <ListView
        android:id="@+id/listMatiere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:divider="@null"
        android:dividerHeight="0dp"

        />

</LinearLayout>