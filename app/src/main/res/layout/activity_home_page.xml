        android:text="Compte"
        android:onClick="HomePageActivityCompte"/>

    <TextView
        android:id="@+id/HomePageActivity_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonjour ! Choisissez une activitÃ© pour commencer l'entrainement !"
