<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hello_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QASActivity">

    <TextView
        android:id="@+id/consigne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/QASActivity_consigne_default"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/qas_enonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/QASTemplate_enonce_default"/>

        <EditText
            android:id="@+id/qas_reponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/QASTemplate_hint"
            />

    </LinearLayout>

    <Button
        android:id="@+id/QASActivity_Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/QASActivity_valider"
        android:onClick="QASActivity_Valider"/>

</LinearLayout>